<!-- Put site-specific property overrides in this file. -->

<configuration>
<!--指定hadoop的临时目录-->
<property>
<name>hadoop.tmp.dir</name>
<value>/home/PL/hadata/tmp</value>
</property>

<!--指向集群-->
<property>
<name>fs.defaultFS</name>
<value>hdfs://PL</value>
</property>

<!--指定zk的集群地址-->
<property>
 <name>ha.zookeeper.quorum</name>
 <value>SZ01:2181,SZ03:2181,SZ04:2181</value>
</property>
<!--回收站自动清空时间-->
<property>
<name>fs.trash.interval</name>
<value>60</value>
</property>
</configuration>
